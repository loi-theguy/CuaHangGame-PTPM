<Window x:Class="GUI.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUI"
        mc:Ignorable="d"
        Title="LoginWindow" Height="200" Width="400"
        ResizeMode="NoResize">
    <Grid>
        <TextBox TabIndex="1" Name="txtUsername" HorizontalAlignment="Left" Height="23" Margin="117,40,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="200"/>
        <Button TabIndex="4" Content="Đăng ký" Name="btnRegister" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="100,130,0,0" Click="btnRegister_Click"/>
        <Button TabIndex="3" Content="Đăng nhập" Name="btnLogin" HorizontalAlignment="Right" VerticalAlignment="Top" Width="75" Margin="0,130,100,0" Click="btnLogin_Click"/>
        <Label Content="Tên tài khoản" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="23,40,0,0"/>
        <Label Content="Mật khẩu" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="23,82,0,0"/>
        <PasswordBox TabIndex="2" Name="txtPassword" HorizontalAlignment="Left" Height="23" Margin="117,85,0,0" VerticalAlignment="Top" Width="200"/>

    </Grid>
</Window>
