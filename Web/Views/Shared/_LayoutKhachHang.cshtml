<!DOCTYPE html>
@using BLDAL

@{
    TaiKhoan kh = Session["kh"] as TaiKhoan;
}

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Content/jquery-3.3.1.min.js"></script>
    <script src="~/Content/bootstrap/js/bootstrap.min.js"></script>
</head>
<body>
    <div class="container-fluid">
        <div class="row bg-dark" style="height:70px;">
            <div class="col-2 mt-3">
                <a href="/Home/Index" style="color:white; font-size:20px; text-decoration:none;">Cửa hàng game</a>
            </div>
            <div class="col-6 pl-4 mt-3">
                <form class="row" action="/Home/Search" method="post">
                    <input class="form-control col-10" type="text" name="keyWord" placeholder="Nhập từ khóa tìm kiếm" />
                    <input class="btn btn-primary col-2" type="submit" value="Search" />
                </form>
            </div>
            <div class="col-3 text-center mt-1">
                @if (Session["kh"] == null)
                {
                    <div class="mt-3">
                        <a href="/Home/DangKy" class="text-light">Đăng ký</a> | <a href="/Home/DangNhap" class="text-light">Đăng nhập</a>
                    </div>
                }
                else
                {
                    <div class="navbar mt-1">
                        <div class="dropdown">
                            <button class="btn btn-secondary dropdown-toggle" type="button" id="dropBox" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Xin chào @kh.HoTen</button>
                            <div class="dropdown-menu" aria-labelledby="dropBox">
                                <a href="/Home/DangXuat" class="dropdown-item">Đăng xuất</a>
                                <a class="dropdown-item" href="/Home/DoiMatKhau">Đổi mật khẩu</a>
                                <a class="dropdown-item" href="/Home/GameDaMua">Game đã mua</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
            <div class="col-1 mt-3">
                <a class="text-light" href="@Url.Action("ItemList","Cart")"><img src="~/Content/Images/giohang.PNG" /> @Html.Action("ItemCount", "Cart")</a>
            </div>
        </div>
        <div class="row mt-3">
            @RenderBody()
        </div>
    </div>
</body>
</html>
