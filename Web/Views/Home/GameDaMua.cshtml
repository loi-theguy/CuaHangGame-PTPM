@using BLDAL
@{
    ViewBag.Title = "GameDaMua";
    Layout = "~/Views/Shared/_LayoutKhachHang.cshtml";
}

@model List<Game>
<div class="container">
    <div class="row">
        <h1>Game đã mua</h1>
    </div>
    <div class="row">
        @if (Model != null && Model.Count != 0)
        {
            <table class="table table-striped">
                <thead>
                    <tr>
                        <td>
                            Game
                        </td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (Game game in Model)
                    {
                        <tr>
                            <td class="text-center">
                                <div class="card" style="margin:10px; width:200px;">
                                    <a href="/Home/ChiTiet/@game.MaGame"><img src="/Content/Images/@game.HinhDaiDien" class="card-img-top" alt="..."></a>
                                    <div class="card-body text-center">
                                        <h5 class="card-title" style="height:80px;">@game.TenGame</h5>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table> }
        else
        {
            <h3>Bạn chưa mua game nào cả</h3>
        }
    </div>

</div>


